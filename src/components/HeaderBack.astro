---
const { title } = Astro.props;
---

<header>
    <h1>{title}</h1>
    <nav>
        <a href="./main-menu">go back</a>
    </nav>
</header>

<style>
    header {
        width: 100%;
        height: 100px;
        grid-column: 2;
        grid-row: 1;
        display: grid;
        grid-template-columns: 100px 1fr 100px;
        grid-template-rows: 100px;
        justify-content: center;
        align-items: center;
        text-align: center;
        background-color: pink;
    }
    h1 {
        grid-column: 1/-1;
        grid-row: 1;
        font-size: 40px;
        font-family: "Annie Use Your Telescope", cursive;
  		font-weight: 400;
  		font-style: normal;
        text-align: center;
    }
    nav {
        grid-column: -1/-2;
        grid-row: 1;
    }
    nav a {
        font-family: "Annie Use Your Telescope", cursive;
  		font-weight: 400;
  		font-style: normal;
        text-align: center;
    }
</style>