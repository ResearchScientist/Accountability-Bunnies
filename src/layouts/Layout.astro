---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Annie+Use+Your+Telescope&family=Life+Savers:wght@400;700;800&family=Pavanam&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--deep-background-colour: rgb(240,240,240);
		--background-colour: rgb(250,250,250);
		--main-colour: rgb(244,66,216);
	}
	html,body,main,header,footer,h1,h2,p,a {
		margin: 0;
		padding: 0;
	}
	a {
		text-decoration: none;
		color: black;
	}
	html {
		width: 100vw;
		height: 100vh;
		background-color: var(--deep-background-colour);
	}
	body {
		display: grid;
		grid-template-columns: 1fr minmax(320px, 500px) 1fr;
		grid-template-rows: 50px calc(100vh - 100px) 50px;
	}
	main {
		grid-column: 2;
		grid-row: 2;
        display: flex;
        align-items: center;
		background-color: var(--background-colour);
	}
	.text-accent {
		color: var(--main-colour);
	}
</style>
