---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Annie+Use+Your+Telescope&family=Life+Savers:wght@400;700;800&family=Pavanam&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--background-colour: rgb(250,250,250);
		--main-colour: rgb(244,66,216);
	}
	a {
		text-decoration: none;
		color: black;
	}
	html,body {
		width: 100vw;
		height: 100vh;
		background-color: var(--background-colour);
	}
	main {
		margin: 0 auto;
		padding: 1rem;
		width: 350px;
		/* max-width: 350px; */
		font-size: 20px;
		line-height: 1.6;
	}
	.text-accent {
		color: var(--main-colour);
	}
</style>
