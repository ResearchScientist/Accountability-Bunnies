<style>
	.headings {
		margin: 100px 0 50px;
		font-size: 40px;
		font-family: "Alfa Slab One", serif;
  		font-weight: 400;
  		font-style: normal;
	}
	.sub-headings {
		font-size: 64px;
  		font-family: "Annie Use Your Telescope", cursive;
  		font-weight: 400;
  		font-style: normal;
	}
	#lets-go {
		width: 80px;
		height: 30px;
		margin: 200px 0 0;
		padding: 5px 10px;
		font-size: 21px;
		font-family: "Life Savers", cursive;
		font-weight: 800;
  		font-style: normal;
		text-align: center;
		border: solid 1px black;
		border-radius: 12px;
	}
</style>
